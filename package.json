{
  "name": "twitter-electron",
  "productName": "Tweetron",
  "version": "3.4.0",
  "description": "A WebView-based X client for desktop, built with Electron.",
  "main": "dist/main.js",
  "type": "module",
  "dependencies": {
    "electron-context-menu": "^4.1.0",
    "open": "^10.1.2"
  },
  "devDependencies": {
    "@electron/packager": "^18.3.6",
    "@eslint/js": "^9.9.0",
    "@power-assert/node": "^0.6.0",
    "@stylistic/eslint-plugin": "^4.4.1",
    "dotenv": "^16.3.1",
    "electron": "^38.4.0",
    "eslint": "^9.9.0",
    "globals": "^16.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "start": "tsc && electron .",
    "clean": "rm -rf dist build && rm -f icon/AppIcon.icns",
    "build": "false 'Error: npm run build:sign or npm run build:no-sign'",
    "build:sign": "npm run clean && npm run build-icon && tsc && node build.js",
    "build:no-sign": "npm run clean && npm run build-icon && tsc && node build.js --no-sign",
    "lint": "eslint .",
    "format": "eslint --fix .",
    "build-icon": "iconutil -c icns icon/AppIcon.iconset -o icon/AppIcon.icns",
    "test": "tsx --test --enable-source-maps --import @power-assert/node test/**/*.test.ts"
  },
  "author": "",
  "license": "ISC",
  "volta": {
    "node": "22.17.0"
  }
}
