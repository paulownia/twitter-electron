{
    "root": true,
	"extends": "eslint:recommended",
	"env": {
		"es2021": true,
		"browser": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"semi": 2,
		"no-console": 1,
		"comma-dangle": [2, "only-multiline"],
		"quotes": [2, "single"],
		"no-irregular-whitespace": 2,
		"no-spaced-func": 2,
		"block-spacing": 2,
		"indent": ["error", 2],
		"no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
		"no-var": ["error"],
		"no-constant-condition": ["error", { "checkLoops": false }],
		"space-before-blocks": 2,
		"space-in-parens": 2,
		"keyword-spacing": 2
	}
}
